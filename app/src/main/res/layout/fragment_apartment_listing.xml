<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardApartment1"
            android:layout_width="@dimen/card_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_margin_top_bottom"
            app:cardBackgroundColor="@color/lightblue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgApartment1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_image_height" />

                <TableLayout
                    android:id="@+id/tblApartment1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/table_side_padding"
                    android:paddingRight="@dimen/table_side_padding">

                    <TableRow
                        android:layout_width="@dimen/tablerow_width"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txtApartment1Price"
                            android:layout_width="@dimen/textbox_info_width"
                            android:layout_height="wrap_content"
                            android:text="@string/price_text"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtPrice1"
                            android:layout_width="@dimen/textbox_listing_info_width"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/black" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txtApartment1Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/address_text"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtAddress1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/black" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txtApartment1Bedrooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bedrooms_text"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtBedrooms1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/black" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txtApartment1Bathrooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bathrooms_text"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtBathrooms1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/black" />
                    </TableRow>
                </TableLayout>

                <CheckBox
                    android:id="@+id/chbxApartment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox_listing_prompt" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

