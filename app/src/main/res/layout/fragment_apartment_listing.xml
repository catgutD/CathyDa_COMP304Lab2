<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardApartment1"
            android:layout_width="270dp"
            android:layout_height="185dp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="29dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/tblApartment1"
                    android:layout_width="match_parent"
                    android:layout_height="76dp">

                    <TableRow
                        android:layout_width="253dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txtApartment1Price"
                            android:layout_width="166dp"
                            android:layout_height="wrap_content"
                            android:text="@string/price_text" />

                        <TextView
                            android:id="@+id/txtPrice1"
                            android:layout_width="103dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txtApartment1Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/address_text" />

                        <TextView
                            android:id="@+id/txtAddress1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txtApartment1Bedrooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bedrooms_text" />

                        <TextView
                            android:id="@+id/txtBedrooms1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txtApartment1Bathrooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bathrooms_text" />

                        <TextView
                            android:id="@+id/txtBathrooms1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd" />
                    </TableRow>
                </TableLayout>

                <CheckBox
                    android:id="@+id/chbxApartment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox_apartment_prompt" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

